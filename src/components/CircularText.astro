---
interface Props {
  text: string;
  className?: string;
}

const { text, className } = Astro.props;
---

<div class:list={["relative w-60 h-60", className]}>
  <div class="absolute w-60 h-[50%] overflow-hidden top-0">
    <svg
      class="circular-text w-60 h-60 absolute top-0"
      viewBox="0 0 100 110"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill="transparent"
        id="circlePath"
        d="
      M 10, 50
      a 40,40 0 1,1 80,0
      40,40 0 1,1 -80,0
    "
      ></path>
      <text>
        <textPath href="#circlePath">{text}</textPath>
      </text>
    </svg>
  </div>
  <div class="absolute w-60 h-[50%] overflow-hidden bottom-0">
    <svg
      class="circular-text w-60 h-60 absolute -top-[100%]"
      viewBox="0 0 100 110"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill="transparent"
        id="circlePath"
        d="
      M 10, 50
      a 40,40 0 1,1 80,0
      40,40 0 1,1 -80,0
    "
      ></path>
      <text>
        <textPath class="fill-white" href=" #circlePath">{text}</textPath>
      </text>
    </svg>
  </div>
</div>
