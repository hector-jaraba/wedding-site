---
interface Props {
  href: string;
  className?: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
}

const { href, className, target } = Astro.props;
---

<a
  class={`bg-white whitespace-nowrap text-center border-solid border-2 border-gold-500 py-2 px-8 text-gold-500 ${className}`}
  href={href}
  target={target}
>
  <span class="relative z-10">
    <slot />
  </span>
</a>

<style>
  a {
    position: relative;
    overflow: hidden;
    transition: 0.3s linear;
  }

  a:hover {
    color: white;
  }

  a:hover::after {
    bottom: 0;
    border-width: 2px;
  }
  a::after {
    content: " ";
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    bottom: 100%;
    left: 0;
    transition: 0.15s ease-in;
    background: #d3a55d;
    border-width: 15px;
    border-color: #ffedca;
  }
</style>
